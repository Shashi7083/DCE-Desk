<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/facultyNSV"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.FacultyFragment">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/facultyEffect"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--add  several shimmer placeholder layout -->

            <include layout="@layout/faculty_effect"></include>
            <include layout="@layout/faculty_effect"></include>
            <include layout="@layout/faculty_effect"></include>
            <include layout="@layout/faculty_effect"></include>
            <include layout="@layout/faculty_effect"></include>
            <include layout="@layout/faculty_effect"></include>
            <include layout="@layout/faculty_effect"></include>
            <include layout="@layout/faculty_effect"></include>

        </LinearLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/facultyRecycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/faculty_view_details"
        android:visibility="gone"
        />




</FrameLayout>