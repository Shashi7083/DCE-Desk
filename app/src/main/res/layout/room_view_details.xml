<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/roomContent"
    android:layout_height="wrap_content"
    android:background="#ffff"
    android:layout_marginBottom="13dp"
    android:layout_marginTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">



        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgRoom"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:backgroundTint="#ffff"
            android:src="@drawable/animehousepng"
            app:shapeAppearanceOverlay="@style/roundimageview"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            >

            <TextView
                android:id="@+id/locationLandmark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:textColor="#757575"
                android:layout_marginBottom="5dp"
                android:text="Shiv Boys Hostel"
                android:textSize="20sp"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="15dp"
                app:srcCompat="@drawable/ic_location" />

        </RelativeLayout>

        <TextView
            android:id="@+id/locationAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:textColor="#757575"
            android:layout_marginRight="10dp"
            android:text="AzamNagar, Shivdhara , Darbhanga"
            android:textSize="16sp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/roomType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textColor="#757575"
            android:layout_marginRight="10dp"
            android:text="Single ,Bachelor"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            >
        <TextView
            android:id="@+id/rs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="â‚¹"
            android:textColor="#010101"
            android:textSize="21sp"
            android:textStyle="bold" />
            <TextView
                android:id="@+id/roomPrice"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textSize="21sp"
                android:textColor="#010101"
                android:text="1000"
                android:layout_marginTop="4dp"/>


            <TextView
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="21sp"

                android:textStyle="bold"
                />
        </LinearLayout>
        <View
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>