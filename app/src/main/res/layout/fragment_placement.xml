<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F0F0"
    tools:context=".Fragments.PlacementFragment">


    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/placementEffect"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--add  several shimmer placeholder layout -->

            <include layout="@layout/placement_effect"></include>
            <include layout="@layout/placement_effect"></include>
            <include layout="@layout/placement_effect"></include>
            <include layout="@layout/placement_effect"></include>
            <include layout="@layout/placement_effect"></include>
            <include layout="@layout/placement_effect"></include>
            <include layout="@layout/placement_effect"></include>
            <include layout="@layout/placement_effect"></include>

        </LinearLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>

    <LinearLayout
        android:id="@+id/linearP"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/placement"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="5"
        tools:ignore="MissingConstraints">


        <TextView
            android:id="@+id/all"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="3dp"

            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:background="@drawable/branch_bk"
            android:elevation="5dp"
            android:gravity="center"
            android:text="All"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:elevation="5dp" />

        <TextView
            android:id="@+id/cse"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:background="@drawable/branch_bk"
            android:elevation="5dp"
            android:gravity="center"
            android:text="CSE"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:elevation="5dp"

            />

        <TextView
            android:id="@+id/eee"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:background="@drawable/branch_bk"
            android:elevation="5dp"
            android:gravity="center"
            android:text="EEE"
            android:textColor="@color/black"
            android:textSize="16sp"

            android:textStyle="bold"
            app:elevation="5dp" />

        <TextView
            android:id="@+id/ce"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:background="@drawable/branch_bk"
            android:elevation="5dp"
            android:gravity="center"
            android:text="CE"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:elevation="5dp" />

        <TextView
            android:id="@+id/me"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:background="@drawable/branch_bk"
            android:elevation="5dp"
            android:gravity="center"
            android:text="ME"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:elevation="5dp" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerP"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F1F0F0"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:listitem="@layout/placement_list" />


</androidx.constraintlayout.widget.ConstraintLayout>