<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/facultyContent"
    android:layout_width="match_parent"
    app:cardCornerRadius="6dp"
    app:cardElevation="5dp"
    android:layout_margin="5dp"
    android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/facultyConstraintLayout"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_height="match_parent">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/facultyImg"
                android:layout_width="300dp"
                android:layout_height="120dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="6dp"
                android:adjustViewBounds="true"
                android:layout_margin="5dp"
                android:layout_weight="0.6"
                android:scaleType="fitXY"
                android:src="@drawable/toolbackground"
                app:backgroundTint="#ffff"
                app:shapeAppearanceOverlay="@style/roundimageviewfaculty"
                tools:ignore="MissingConstraints" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="0.4"
                android:orientation="vertical"
                >

            <TextView
                android:id="@+id/facultyName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:maxLength="30"
                android:maxLines="2"
                android:textColor="@color/black"
                android:layout_marginLeft="3dp"
                android:text="Faculty Name"
                android:textSize="19sp"
                android:textStyle="bold"
              />

            <TextView
                android:id="@+id/facultyDesignation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:maxLines="2"
                android:layout_marginLeft="3dp"
                android:text="Faculty Designation"
                android:textSize="17sp"
                android:textStyle="bold"
              />

            <TextView
                android:id="@+id/facultyDepartment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:maxLines="3"
                android:text="Department"
                android:textSize="16sp"
               />

            </LinearLayout>
        </LinearLayout>



</androidx.cardview.widget.CardView>