<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.CounselingFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >

        <Button
            android:id="@+id/btnDocument"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Documents Required"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            app:backgroundTint="@null"
            android:background="@drawable/btn_counseling"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
         android:visibility="gone"
            android:id="@+id/dList"
            >

        <ImageView
            android:id="@+id/documentsList"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:background="#3E85D8"
            android:scaleType="fitStart"
            android:src="@drawable/documentrequiredpng"
            tools:ignore="MissingConstraints"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="@id/dList"
                app:layout_constraintBottom_toBottomOf="@id/dList"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/fdoc"
                app:backgroundTint="#000000"
                android:src="@drawable/downloadbtn"

                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/medicalFormat"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignBottom="@+id/documentsList"
            android:layout_alignParentBottom="true"
            android:text="medical Format"
            android:layout_marginTop="5dp"
            app:backgroundTint="@null"
            android:background="@drawable/btn_counseling"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:textColor="@color/white"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/medicalconst"
            android:visibility="gone"

            >
        <ImageView
            android:id="@+id/medical"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:background="#3E85D8"
            android:scaleType="fitStart"

            android:src="@drawable/medical_format"
            tools:ignore="MissingConstraints"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="@id/medicalconst"
                app:layout_constraintBottom_toBottomOf="@id/medicalconst"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/fmedical"
                app:backgroundTint="#000000"
                android:src="@drawable/downloadbtn"

                />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <Button
            android:id="@+id/antiRagging"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignBottom="@+id/documentsList"
            android:layout_alignParentBottom="true"
            android:text="Anti Ragging Affidavit"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            app:backgroundTint="@null"
            android:background="@drawable/btn_counseling"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:textColor="@color/white"
            />

    </LinearLayout>

</ScrollView>